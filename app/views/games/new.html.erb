<div class = 'letter-grid'>
  <h1>New game</h1>
  <div style = 'display: flex;'>
    <% session[:grid].each do |letter| %>
      <div class = 'letter'><h3><%= letter %></h3></div>
    <% end %>
  </div>
  <form action='/score' method='post' data-turbo='false'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type='text' name='word' placeholder='Type your word:'>
    <input type='submit'>
  </form>
</div>
